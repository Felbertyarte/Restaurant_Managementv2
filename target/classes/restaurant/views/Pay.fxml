<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<DialogPane prefHeight="124.0" prefWidth="284.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="restaurant.controllers.pay_controller">
   <buttonTypes>
      <ButtonType fx:constant="OK" />
      <ButtonType fx:constant="CANCEL" />
   </buttonTypes>
   <content>
      <VBox alignment="TOP_CENTER" prefHeight="142.0" prefWidth="284.0">
         <children>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Total: P" />
                  <Label fx:id="total" text="100" />
               </children>
            </HBox>
            <AnchorPane prefHeight="8.0" prefWidth="264.0" />
            <AnchorPane prefHeight="11.0" prefWidth="340.0" />
            <Label prefHeight="17.0" prefWidth="54.0" text="Amount" />
            <TextField fx:id="amount_ft" />
            <Label />
            <HBox fx:id="sufficient_amount" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" visible="false">
               <children>
                  <Label text="sufficient amount" textFill="RED" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Change: P" />
                  <Label fx:id="change" text="200" />
               </children>
            </HBox>
            <AnchorPane prefHeight="12.0" prefWidth="264.0" />
         </children>
      </VBox>
   </content>
</DialogPane>
